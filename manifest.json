{
  "manifest_version": 3,
  "name": "ClearConnect",
  "version": "2.1.0",
  "description": "Safely withdraw old LinkedIn connection requests.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_title": "Open ClearConnect"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/mynetwork/invitation-manager/sent/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}